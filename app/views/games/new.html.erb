<h1>New Game</h1>
<hr>
<div class="container">
  <% @letters.each do |letter|%>
    <div class="letters-box"><%=letter%></div>
  <% end %>
</div>
<div class="container">
  <form action="/score" method="post" class="form-inline">
    <div class="form-group m-1">
      <label for="">What is the longest word you can find?</label>
    </div>
    <div class="form-group m-1">
      <input type="text" name="answer" placeholder="Your word here...">
    </div>
    <input type="submit" class="btn btn-primary btn-sm" value="Play">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>

